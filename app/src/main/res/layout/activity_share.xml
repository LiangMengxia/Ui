<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.ui.activity.activity.ShareActivity"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">
        <com.example.lenovo.ui.button.AnoBackImgTextBtn
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/backspaceBtn"
            android:background="@color/white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:textSize="20sp"
            android:textColor="@color/deepgray"
            android:gravity="center_horizontal"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="65dp"/>
        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/firstpageBtn"
            android:text="@string/firstpage"
            android:textSize="15sp"
            android:textColor="@drawable/backtext_deepgray_selector"
            android:background="@color/white" />
    </LinearLayout>

    <com.example.lenovo.ui.javaClass.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/circleimage1"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true" />
    <com.example.lenovo.ui.javaClass.CircleImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/circleimage2"
        android:background="@color/transparent"
        android:layout_alignBottom="@+id/circleimage1"
        android:layout_alignEnd="@id/circleimage1" />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/chooseNextBtn"
        android:text="@string/choosenext"
        android:textAlignment="center"
        android:background="@drawable/choosenext_selector"
        android:textColor="@color/white"
        android:layout_below="@+id/circleimage1"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"/>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/chooseNextBtn"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin">
    <ImageView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:src="@drawable/line" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shareto"
        android:textColor="@color/deepgray"
        android:textSize="18sp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"/>
    <ImageView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:src="@drawable/line" />
</LinearLayout>

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/horizontalScrollView"
        android:layout_below="@+id/linearLayout2">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/QQBtn"
                android:src="@mipmap/qq_s_launcher"
                android:background="@color/white"
                android:layout_marginStart="50dp"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/WechatBtn"
                android:src="@mipmap/wechat_s_launcher"
                android:background="@color/white"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sinaweiboBtn"
                android:src="@mipmap/sinaweibo_s_launcher"
                android:background="@color/white" />
        </LinearLayout>

    </HorizontalScrollView>
</RelativeLayout>
